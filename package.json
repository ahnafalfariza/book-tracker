{
  "name": "book-tracker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@zxing/library": "^0.18.3",
    "bip39": "^3.0.2",
    "croppie": "^2.6.5",
    "random-quotes": "^1.3.0",
    "react": "^17.0.1",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.11.2",
    "react-loading": "^2.0.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "skynet-js": "^2.7.0",
    "web-vitals": "^0.2.4",
    "zustand": "^3.1.4"
  },
  "scripts": {
    "postcss:watch": "postcss src/styles/index.css -o src/styles/tailwind.css --env development -w",
    "postcss:build": "postcss src/styles/index.css -o src/styles/tailwind.css --env production",
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "test:react": "react-scripts test",
    "eject:react": "react-scripts eject",
    "build": "npm-run-all -s postcss:build react:build",
    "start": "npm-run-all -p postcss:watch react:start"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@ceramicstudio/idx-tools": "^0.3.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.2.0",
    "tailwindcss": "^1.9.6"
  }
}
